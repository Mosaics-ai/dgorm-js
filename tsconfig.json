      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "lib",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*"
